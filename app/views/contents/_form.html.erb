<%= form_for @content, html: { multipart: true} do |f| %>

  <div class="form-group">
    <label> category </label>
      <%= f.select(:category_id) do %>
        <% category = Category.all.map { | category | [ category.name, category.id] } %>
        <%= options_for_select(category) %>
      <% end %>
  </div>

  <div class="form-group">
    <label>Content Title:</label>
    <%= f.text_field :info_label,  placeholder: "Mini content blurb", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Content text:</label>
    <%= f.text_field :info_text %>
  </div>

  <div class="form-group">
    <label>Video</label>
    <%= f.text_field :video, placeholder: "http://www.youtube.com/your_video", class: "form-control" %>
  </div>

    <label>Photo </label>
    <div class="form-group">
      <span class="btn btn-default">
        Upload Photos
        <%= file_field_tag "photos[]", type: :file %>
      </span>
    </div>

  <label>Publish this Content?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
