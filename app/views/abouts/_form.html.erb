<%= form_for @about, html: { multipart: true} do |f| %>

  <div class="form-group">

  <div class="form-group">
    <label>Full Name:</label>
    <%= f.text_field :name,  placeholder: "Igor Stravinsky", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Motto:</label>
    <%= f.text_field :motto,  placeholder: "I have a strong propensity for discord", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Bio:</label>
    <%= f.text_area :bio,  placeholder: "Author", class: "form-control"  %>
  </div>


    <div class="form-group">
      <label>Photo </label>
      <span class="btn btn-default">
        Upload Photos
        <%= file_field_tag "photos[]", type: :file %>
      </span>
    </div>

  <label>Publish this Content?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
