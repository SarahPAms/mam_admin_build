<div class="container content" id="testimonials">
  <% @testimonials.each do |testimonial| %>
  <div class="col-md-4">
    <div class="testimonials">
      <div class="active item">
        <div class="carousel-info">
        <% if testimonial.photo? %>
          <%= image_tag testimonial.photo, class: 'pull-left' %>
        <% end %>
          <div class="pull-left">
            <span class="testimonials-name"><%= testimonial.full_name %></span>
            <span class="testimonials-post"><%= testimonial.title %></span>
          </div>
        </div>
        <blockquote>
          <p><%= link_to testimonial.quote, testimonial_path(testimonial) %></p>
        </blockquote>
      </div>
    </div>
  </div>
  <% end %>
  <%= link_to "Create New Testimonial", new_testimonial_path, class: "btn btn-primary" %>
</div>
