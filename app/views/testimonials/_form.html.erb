<%= form_for @testimonial, html: { multipart: true} do |f| %>

  <div class="form-group">
    <label>First Name:</label>
    <%= f.text_field :first_name,  placeholder: "Victor", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Last Name:</label>
    <%= f.text_field :last_name,  placeholder: "Hugo", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Title:</label>
    <%= f.text_field :title,  placeholder: "Author", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Quote</label>
    <%= f.text_area :quote, placeholder: "Music expresses that which cannot be said and on which it is impossible to be silent.", class: "form-control" %>
  </div>

    <label>Photo </label>
    <div class="form-group">
      <span class="btn btn-default">
        Upload Photos
        <%= file_field_tag "photos[]", type: :file %>
      </span>
    </div>

  <label>Publish this Content?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
