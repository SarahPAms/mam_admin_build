<%= form_for @category, html: { multipart: true} do |f| %>

  <div class="form-group">
    <label>Category Name:</label>
    <%= f.text_field :name,  placeholder: "Depression", class: "form-control"  %>
  </div>

  <div class="form-group">
    <label>Category Description:</label>
    <%= f.text_field :description, placeholder: "Give us a taster of something intruiging", class: "form-control" %>
  </div>

    <label>Photo </label>
    <div class="form-group">
      <span class="btn btn-default">
        Upload Photos
        <%= file_field_tag "photos[]", type: :file %>
      </span>
    </div>

  <label>Publish this Content?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
